<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="#1E1E1E">

    <TextView
        android:id="@+id/tvTitleCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aspect ratio"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <FrameLayout
            android:id="@+id/frameAspectRatio1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/aspect_ratio_background"
            android:layout_marginEnd="8dp"
            android:padding="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="#1E1E1E">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_crop_16_9_24"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16 x 9"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameAspectRatio2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/aspect_ratio_background_selected"
            android:layout_marginEnd="8dp"
            android:padding="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="#1E1E1E">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_crop_portrait_24"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9 x 16"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameAspectRatio3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/aspect_ratio_background"
            android:padding="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp"
                android:background="#1E1E1E">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_crop_square_24"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 x 1"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnCancelCrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@android:color/black"
        android:background="@drawable/rounded_button"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

</LinearLayout>
